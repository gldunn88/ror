<h1>Skill Manager</h1>

<table style="width:100%">
    <tr>
        <th> Skill </th>
        <th> Description </th>
        <th> Stat </th>
    </tr>
    <% @skills.each do |skill| %>
    <tr>
        <td> <%= skill.name %> </td>
        <td> <%= skill.description %> </td>
        <td> <%= Stat.find(skill.stat_id).name %> </td>
    </tr>
    <% end %>

</table>
